{
  "name": "inkdes-email-comps-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Turborepo for InkDes-mailer components and apps",
  "repository": {
    "type": "git",
    "url": "https://github.com/iClasser/inkdes-email-comps"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:watch": "turbo run dev --filter './packages/*' --parallel",
    "gen:ink": "pnpm dlx tsx tools/generate-ink-aggregator.ts",
    "build:ink": "pnpm -C rootPackage/inkdes-email-comps build",
    "clean": "pnpm run clean:packages",
    "clean:packages": "pnpm -r --filter './packages/*' --filter './rootPackage/*' run clean",
    "test": "turbo run test",
    "changeset": "changeset",
    "changeset:build": "pnpm turbo run build --filter './packages/*' --filter './rootPackage/*'",
    "changeset:publish": "pnpm changeset publish",
    "build:packages:publish": "pnpm turbo run build --filter './packages/*' --filter './rootPackage/*' && pnpm changeset publish",
    "lint": "echo 'no lint configured'",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "release": "turbo run build --filter=./packages/* --filter './rootPackage/*' && pnpm changeset publish",
    "clean:install": "pnpm clean && pnpm install && pnpm build && pnpm changeset",
    "playground": "pnpm -C apps/playground dev"
  },
  "keywords": [
    "react",
    "email",
    "email-notification",
    "react-email-component",
    "react-email",
    "send-email",
    "email-component",
    "inkdes-mailer",
    "inkdes-email-comps",
    "inkdes"
  ],
  "devDependencies": {
    "@changesets/cli": "2.29.5",
    "tsdown": "^0.15.4",
    "turbo": "2.5.4",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  }
}
