{
  "name": "@inkdes-email/components",
  "version": "0.2.0",
  "description": "All InkDes email components in one package",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsdown src/index.ts --format esm,cjs --dts --external react",
    "build:watch": "tsdown src/index.ts --format esm,cjs --dts --watch",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iClasser/inkdes-email-comps",
    "directory": "packages/components"
  },
  "keywords": [
    "react",
    "email",
    "inkdes",
    "email-components",
    "email-notification",
    "react-email-components",
    "react-email",
    "send-email",
    "email-component",
    "inkdes-mailer",
    "inkdes-email-comps"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": "^18.0 || ^19.0 || ^19.0.0-rc"
  },
  "devDependencies": {
    "typescript": "5.8.3",
    "tsconfig": "workspace:*"
  },
  "dependencies": {
    "@inkdes-email/body": "workspace:*",
    "@inkdes-email/head": "workspace:*",
    "@inkdes-email/html": "workspace:*",
    "@inkdes-email/body-content": "workspace:*",
    "@inkdes-email/font": "workspace:*",
    "@inkdes-email/button": "workspace:*",
    "@inkdes-email/img": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}